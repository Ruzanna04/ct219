#include <iostream>
#include <vector>
using namespace std;

class ArrayPairFinder {
public:
    ArrayPairFinder(const vector<int>& arr, int m) 
        : array(arr), sum(m) {}

    void findPairIndices() {
    int n = array.size();
    for (int i = 0; i < n; ++i) {
        for (int j = i + 1; j < n; ++j) {
            if (array[i] + array[j] == sum) {
                cout << "Indices: " << i << " and " << j << endl;
                return; 
            }
        }
    }
    cout << "No valid pair found." << endl;
    }

private:
    vector<int> array; 
    int sum; 
};

int main() {
    vector<int> array = {2, 7, 11, 15}; 
    int m = 9; 

    ArrayPairFinder pairFinder(array, m);
    
    pairFinder.findPairIndices();

    return 0;
}
