#include <iostream>
#include <vector>
#include <cassert>
using namespace std;

class Solution {
public:
    //krknorinaknery heracnelu gorcaruyt
    int removeDuplicates(vector<int>& nums) {
        if (nums.size() == 0) return 0;
        
      //stugum enq ardyoq kan krknvox tarrer
        int k = 1;
        for (int i = 1; i < nums.size(); i++) {
            if (nums[i] != nums[k - 1]) {
                nums[k] = nums[i];
                k++;
            }
        }
        return k;
    }
};

int main() {
    Solution solution;

    vector<int> nums = {0,0,1,1,1,2,2,3,3,4};
    vector<int> expectedNums = {0,1,2,3,4}; 

   //ezaki tarreri qanak
    int k = solution.removeDuplicates(nums);

    //arjeqnery ev chapery chisht en?
    assert(k == expectedNums.size());
    for (int i = 0; i < k; i++) {
        assert(nums[i] == expectedNums[i]);
    }


    cout << "Unique elements: " << k << endl;
    cout << "Array after duplicates removed: ";
    for (int i = 0; i < k; i++) {
        cout << nums[i] << " ";
    }
    cout << endl;

    return 0;
}
